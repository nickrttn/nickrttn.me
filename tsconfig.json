{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["public", "functions"],
  "exclude": ["node_modules", "dist/**/*", ".cache/**/*"]
}
